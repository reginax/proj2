<h3>Farmer</h3>
<p>Name: <%= @farmer.name if @farmer.name %></p>
<p>Email: <%= @farmer.email if @farmer.email %></p>

<% if current_farmer.id == @farmer.id %>
	<%= link_to "Create a new pokemon", plants_new_path, :class => "button medium" %>  
<% end %>


<table>
  <tr>
    <th>ID</th>
    <th>Name</th> 
    <th>Health</th>
    <th>Damage it!</th>
  </tr>

	<% @farmer.plants.each do |p| %>
		<tr>
		<td><%= p.id %></td>
		<td><%= p.name %></td>
		<td><%= p.health %></td>
		<td><%= button_to "Damage!", damage_path(id: p), :class => "button medium", :method => :patch %></td>
		</tr>
	<% end %>

</table>




