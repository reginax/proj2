<% if 1==1 %>
<%= js add_gritter("This is your farm. Flavor text here.", title:"Your Farm", time: 2000, :nodom_wrap  => true, position:"bottom_left") %>
<% end %>

<!DOCTYPE html>

<html lang="en">
<head>
  <title>Farmer</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
  <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="container">
  <h2><%= @farmer.name if @farmer.name %>'s Precious</h2>
 <% if current_farmer.id == @farmer.id %>
    <%= link_to plants_new_path, class: 'btn btn-medium' do %>Breed New Plant
        <% end %>
<% end %>

<div class="container">
  <div class="row">
    <h1>Your Crops</h1>
    <% count = 0 %>
      <% @farmer.spaces.each do |s| %>
      <% count += 1 %>
      <% p = s.plant %>
      <% if p %>
      <img src="//placehold.it/100x100/449955/FFF" class="btn btn-sm">
      <% else %>
      <img src="//placehold.it/99x99/449955/FFF" class="btn btn-sm">
      <% end %>
      <% if count % 3 == 0 %>
      <br>
      <% end %>
    <% end %>
</div>  

    
                      
  <table class="table table-striped">
    <thead>
    <tr>
        <th>ID</th>
        <th>Name</th> 
        <th>Health</th>
    </tr>
    </thead>
    <tbody>
    <% @farmer.spaces.each do |s| %>
    <% p = s.plant %>
    <% if p %> 
    <tr>
      <td><%= p.id %></td>
      <td><%= p.name %></td>
      <td><%= p.health %></td>
      <td><%= link_to water_path(id: p), class: 'btn btn-medium' do %>Water
        <% end %></td>
      <td><%= link_to harvest_path(id: p), class: 'btn btn-medium' do %>Harvest
        <% end %>
        <% end %></td>
    </tr>
    <% end %>

</table>
</div>

</body>
</html>


