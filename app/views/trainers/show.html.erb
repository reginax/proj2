<h3>Trainer</h3>
<p>Name: <%= @trainer.name if @trainer.name %></p>
<p>Email: <%= @trainer.email if @trainer.email %></p>

<% if current_trainer.id == @trainer.id %>
	<%= link_to "Create a new pokemon", pokemons_new_path, :class => "button medium" %>  
<% end %>


<table>
  <tr>
    <th>ID</th>
    <th>Name</th> 
    <th>Health</th>
    <th>Damage it!</th>
  </tr>

	<% @trainer.pokemons.each do |p| %>
		<tr>
		<td><%= p.id %></td>
		<td><%= p.name %></td>
		<td><%= p.health %></td>
		<td><%= button_to "Damage!", damage_path(id: p), :class => "button medium", :method => :patch %></td>
		</tr>
	<% end %>

</table>




